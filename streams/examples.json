{
    "name": "examples",
    "translatable": true,
    "routes.view": "examples/{id}",
    "source": {
        "path": "examples"
    },
    "fields": {
        "example_title": "text",
        "example_decimal": "decimal",
        "example_slug": "slug",
        "example_textarea": "textarea",
        "example_markdown": "markdown",
        "body": "markdown",
        "example_datetime": "datetime",
        "example_date": {
            "type": "date",
            "rules": [
                "before:now"
            ]
        },
        "example_time": "time",
        "example_color": "color",
        "example_select": {
            "type": "select",
            "config": {
                "options": {
                    "simple": "Simple",
                    "medium": "Intermediate",
                    "hard": "Advanced"
                }
            }
        },
        "example_radio": {
            "type": "select|radio",
            "config": {
                "options": {
                    "first": "1st",
                    "second": "2nd",
                    "third": "3rd"
                }
            }
        },
        "example_range": "integer|range",
        "example_boolean": "boolean",
        "example_image": "image",
        "example_file": "file",
        "example_relationship": {
            "type": "relationship",
            "config": {
                "related": "docs"
            }
        }
    },
    "ui": "@streams/ui/examples.json"
}
