{
    "slug": "pages",
    "route": "/{id}",
    "template": "page",
    "rules": {
        "sort": [
            "required",
            "testing"
        ]
    },
    "validators": {
        "testing": {
            "handler": "Anomaly\\Streams\\Ui\\Form\\Testing",
            "message": "You should know better.."
        }
    },
    "fields": {
        "title": "text",
        "intro": "textarea",
        "body": "text|textarea",
        "sort": "integer"
    }
}
