{
    "template": "doc",
    "url_prefix": "docs",
    "source.format": "md",
    "routes.view": "docs/{id}",
    "description": "The main entry point to project and component documentation.",
    "notes": "This is looking good. Ready for discussion. Idea is to introduce primary focuses of Streams which overview and then hand off to various aspects of the core packages (core, ui, api, and possibly code/dev)",
    "source": {
        "path": "docs"
    },
    "rules": {
        "id": "required"
    },
    "fields": {
        "id": {
            "type": "string",
            "name": "field.id",
            "rules": [
                "regex:/[a-z0-9\\-\\_]/"
            ]
        },
        "sort": {
            "type": "integer",
            "rules": [
                "required",
                "min:0",
                "regex:/[0-9]{1,3}/"
            ]
        },
        "title": {
            "type": "text"
        },
        "body": "markdown",
        "category": {
            "type": "select",
            "config": {
                "options": {
                    "introduction": "Introduction",
                    "getting_started": "Getting Started",
                    "core_concepts": "Core Concepts",
                    "basics": "The Basics",
                    "streams": "Streams",
                    "database": "Database",
                    "templating": "Templating",
                    "frontend": "Frontend",
                    "security": "Security",
                    "control_panel": "Control Panel",
                    "tables": "Tables",
                    "forms": "Forms",
                    "laravel": "Laravel",
                    "developers": "Developers",
                    "advanced": "Advanced"
                }
            }
        },
        "stage": {
            "type": "select",
            "default": "outlining",
            "config": {
                "options": {
                    "outlining": "Outlining",
                    "drafting": "Drafting",
                    "editing": "Editing", 
                    "review": "Review",
                    "done": "Done"
                }
            }
        },
        "enabled": "boolean"
    },
    "ui": {
        "tables": {
            "default": {
                "filters": {
                    "title": {}
                },
                "buttons": {
                    "edit": {}
                }
            }
        }
    }
}
