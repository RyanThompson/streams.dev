{
    "name": "users",
    "template": "user",
    "translatable": true,
    "source.format": "json",
    "routes.view": "users/{id}",
    "config.key_name": "username",
    "fields": {
        "username": "slug",
        "email": "string",
        "password": "hash",
        "role": {
            "type": "relationship",
            "config": {
                "related": "roles"
            }
        }
    },
    "ui": {
        "table": {
            "columns": [
                "id",
                "email"
            ],
            "buttons": {
                "edit": {
                    "href": "{route.prefix}/users/{entry.id}/edit"
                }
            }
        },
        "form": {}
    }
}
