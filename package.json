{
    "private": true,
    "workspaces": {
        "packages": [
            "vendor/streams/*",
            "packages/laravel-streams-mix-extension"
        ]
    },
    "scripts": {
        "yarn": "yarn",
        "core": "cd vendor/streams/core && npm",
        "ui": "cd vendor/streams/ui && npm",
        "clean": "rimraf ./node_modules ./package-lock.json vendor/streams/*/node_modules vendor/streams/*/package-lock.json yarn.lock",
        "reinstall": "yarn clean && yarn",
        "dev": "yarn development",
        "development": "mix",
        "watch": "mix watch",
        "watch-poll": "mix watch -- --watch-options-poll=1000",
        "hot": "mix watch --hot",
        "prod": "yarn production",
        "production": "mix --production"
    },
    "dependencies": {
        "@laravel-streams/mix-extension": "^0.0.3",
        "@types/anchor-js": "^4.2.0",
        "@types/clipboard": "^2.0.1",
        "@types/prismjs": "^1.16.2",
        "@types/terser-webpack-plugin": "^5.0.2",
        "@types/webpack-bundle-analyzer": "^3.9.0",
        "anchor-js": "^4.3.0",
        "autoprefixer": "^10.2.4",
        "axios": "^0.21",
        "browser-sync": "^2.26.14",
        "browser-sync-webpack-plugin": "^2.3.0",
        "clipboard": "^2.0.6",
        "cross-env": "^7.0",
        "cypress": "^6.4.0",
        "foundation-sites": "^6.6.3",
        "highlight.js": "^10.5.0",
        "laravel-mix": "^6.0.11",
        "npm-run-all": "^4.1.5",
        "postcss": "^8.2.5",
        "prismjs": "^1.23.0",
        "resolve-url-loader": "^3.1.2",
        "rimraf": "^3.0.2",
        "sass": "^1.32.6",
        "sass-loader": "^11.0.0",
        "tailwindcss": "^2.0.2",
        "tocbot": "^4.12.2",
        "ts-node": "^9.1.1",
        "tslib": "^2.1.0",
        "typescript": "^4.1.3",
        "webpack-bundle-analyzer": "^4.4.0"
    }
}
