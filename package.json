{
    "private": true,
    "workspaces": {
        "packages": [
            "vendor/streams/*",
            "packages/laravel-streams-mix-extension"
        ]
    },
    "scripts": {
        "yarn": "yarn",
        "core": "cd vendor/streams/core && npm",
        "ui": "cd vendor/streams/ui && npm",
        "clean": "rimraf ./node_modules ./package-lock.json vendor/streams/*/node_modules vendor/streams/*/package-lock.json yarn.lock",
        "dev": "npm run development",
        "development": "mix",
        "watch": "mix watch",
        "watch-poll": "mix watch -- --watch-options-poll=1000",
        "hot": "mix watch --hot",
        "prod": "npm run production",
        "production": "mix --production"
    },
    "dependencies": {
        "anchor-js": "^4.2.2",
        "axios": "^0.19",
        "browser-sync": "^2.26.12",
        "browser-sync-webpack-plugin": "^2.2.2",
        "cross-env": "^7.0",
        "cypress": "^4.12.1",
        "highlight.js": "^10.2.1",
        "laravel-mix": "^6.0.6",
        "laravel-streams-mix-extension": "^1.0.0",
        "autoprefixer": "^10.2.3",
        "npm-run-all": "^4.1.5",
        "resolve-url-loader": "^3.1.0",
        "rimraf": "^3.0.2",
        "sass": "^1.27.0",
        "sass-loader": "^8.0.0",
        "tailwindcss": "^1.8.12",
        "tocbot": "^4.12.0",
        "ts-node": "^9.1.1",
        "typescript": "^4.1.3",
        "postcss": "^8.2.2"
    }
}
