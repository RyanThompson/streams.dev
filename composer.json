{
    "name": "pyrocms/pyrocms",
    "description": "Build better Laravel websites and applications faster with Pyro.",
    "type": "project",
    "keywords": [
        "laravel",
        "control panel",
        "cmf"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Ryan Thompson",
            "email": "ryan@pyrocms.com"
        }
    ],
    "require": {
        "streams/api": "1.0.x-dev",
        "streams/core": "dev-feature/webpack-mix-root-based-bundling",
        "streams/ui": "dev-feature/webpack-mix-root-based-bundling"
    },
    "require-dev": {
        "barryvdh/laravel-debugbar": "^3.3",
        "streams/cli": "1.0.x-dev",
        "fzaninotto/faker": "^1.9",
        "facade/ignition": "^2.0",
        "mockery/mockery": "^1.3",
        "laravel/tinker": "^2.2",
        "phpunit/phpunit": "^9.0"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.pyrocms.com"
        }
    ],
    "autoload": {
        "classmap": [
            "database/seeds",
            "database/factories"
        ],
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "": "tests/"
        }
    },
    "extra": {
        "dont-discover": []
    },
    "prefer-stable": true,
    "minimum-stability": "dev",
    "config": {
        "bin-dir": "bin",
        "preferred-stable": false,
        "minimum-stability": "dev",
        "preferred-install": "dist",
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "scripts": {
        "pre-autoload-dump": [
            "rm -Rf bootstrap/cache/*.php"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi",
            "@php artisan clear --ansi",
            "@php artisan vendor:publish --ansi --tag=assets",
            "@php artisan queue:restart --ansi"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ]
    }
}
